        function checkAlert(lastAnalysisTime) {
            if (!lastAnalysisTime) return;

            const lastTime = new Date(lastAnalysisTime);
            const now = new Date();
            const daysDiff = (now - lastTime) / (1000 * 60 * 60 * 24);

            // å¦‚æœè¶…è¿‡3å¤©ä¸”ç”¨æˆ·æ²¡æœ‰å…³é—­è¿‡æé†’ï¼ˆæˆ–å…³é—­åå·²è¿‡1å¤©ï¼‰
            const dismissed = localStorage.getItem('alert-dismissed');
            const shouldShow = daysDiff > 3 && (!dismissed || (Date.now() - dismissed > 86400000));

            if (shouldShow) {
                document.getElementById('alert-banner').classList.add('show');
            }
        }

        // æ ¼å¼åŒ–ç›¸å¯¹æ—¶é—´
        function formatRelativeTime(dateString) {
            if (!dateString) return '-';
            
            const date = new Date(dateString);
            const now = new Date();
            const diff = now - date;
            
            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);
            
            if (minutes < 1) return 'åˆšåˆš';
            if (minutes < 60) return `${minutes}åˆ†é’Ÿå‰`;
            if (hours < 24) return `${hours}å°æ—¶å‰`;
            if (days < 30) return `${days}å¤©å‰`;
            return date.toLocaleDateString();
        }

