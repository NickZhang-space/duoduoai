        function displayTrendPrediction(prediction, history) {
            const ctx = document.getElementById('trend-chart').getContext('2d');
            if (trendChart) trendChart.destroy();

            const historicalDates = history.map(h => h.date);
            const historicalSales = history.map(h => h.sales);
            const predictionDates = prediction.next_7_days.map(p => p.date);
            const predictionSales = prediction.next_7_days.map(p => p.predicted_sales);

            trendChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: [...historicalDates, ...predictionDates],
                    datasets: [{
                        label: 'å†å²é”€é‡',
                        data: [...historicalSales, ...Array(predictionDates.length).fill(null)],
                        borderColor: '#E84D1A',
                        backgroundColor: 'rgba(232, 77, 26, 0.1)',
                        tension: 0.4
                    }, {
                        label: 'é¢„æµ‹é”€é‡',
                        data: [...Array(historicalDates.length).fill(null), ...predictionSales],
                        borderColor: '#52C41A',
                        backgroundColor: 'rgba(82, 196, 26, 0.1)',
                        borderDash: [5, 5],
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: { legend: { display: true } },
                    scales: { y: { beginAtZero: true } }
