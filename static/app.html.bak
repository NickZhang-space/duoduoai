        // è®¡ç®—å•†å“è¯„åˆ†
        function calculateProductScore(product) {
            let score = 60;
            
            if (product.competition === 'ä½') score += 15;
            else if (product.competition === 'ä¸­') score += 10;
            
            const profitNum = parseInt(product.profit_margin);
            if (profitNum > 40) score += 15;
            else if (profitNum > 30) score += 10;
            else if (profitNum > 20) score += 5;
            
            return Math.min(score, 95);
        }

