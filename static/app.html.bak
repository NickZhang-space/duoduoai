        async function askQuestion() {
            const input = document.getElementById('qa-input');
            const question = input.value.trim();
            if (!question) {
                alert('è¯·è¾“å…¥é—®é¢˜');
                return;
            }

            addChatMessage('user', question);
            input.value = '';

            const loadingId = 'loading-' + Date.now();
            addChatMessage('assistant', 'æ­£åœ¨æ€è€ƒ...', loadingId);

            try {
                const response = await fetch('/api/intelligence/ask-question', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        question: question,
                        user_context: currentUser ? { user_id: currentUser.id } : {}
                    })
                });

                const data = await response.json();
                document.getElementById(loadingId)?.remove();

                if (data.success) {
                    addChatMessage('assistant', data.result.answer);
                } else {
                    addChatMessage('assistant', 'æŠ±æ­‰ï¼Œå›ç­”å¤±è´¥');
                }
            } catch (error) {
                document.getElementById(loadingId)?.remove();
                addChatMessage('assistant', 'æœåŠ¡æš‚æ—¶ä¸å¯ç”¨');
            }
        }

        function askQuickQuestion(question) {
            document.getElementById('qa-input').value = question;
