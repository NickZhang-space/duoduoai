        // ==================== AIä¸­å¿ƒå­æ ‡ç­¾åˆ‡æ¢ ====================
        function switchSmartTab(tabName) {
            // éšè—æ‰€æœ‰å­æ ‡ç­¾å†…å®¹
            document.querySelectorAll('.smart-tab-content').forEach(tab => {
                tab.classList.remove('active');
                tab.style.display = 'none';
            });
            
            // ç§»é™¤æ‰€æœ‰å­æ ‡ç­¾æŒ‰é’®çš„ active çŠ¶æ€
            document.querySelectorAll('.smart-tab-btn').forEach(btn => {
                btn.style.background = 'white';
                btn.style.color = '#E84D1A';
                btn.classList.remove('active');
            });
            
            // æ˜¾ç¤ºé€‰ä¸­çš„å­æ ‡ç­¾
            const tabMap = {
                'recommendations': 'smart-recommendations-tab',
                'predictions': 'smart-predictions-tab',
                'qa': 'smart-qa-tab',
                'risks': 'smart-risks-tab'
            };
            
            const targetTab = document.getElementById(tabMap[tabName]);
            if (targetTab) {
                targetTab.classList.add('active');
                targetTab.style.display = 'block';
            }
            
            // æ¿€æ´»å¯¹åº”çš„æŒ‰é’®
            const activeBtn = document.querySelector(`.smart-tab-btn[data-tab="${tabName}"]`);
            if (activeBtn) {
                activeBtn.style.background = '#E84D1A';
                activeBtn.style.color = 'white';
                activeBtn.classList.add('active');
            }
        }

