        function addChatMessage(role, content, id = null) {
            const container = document.getElementById('chat-messages');
            if (container.children.length === 1 && container.children[0].textContent.includes('å‘ AI æé—®')) {
                container.innerHTML = '';
            }

            const messageDiv = document.createElement('div');
            if (id) messageDiv.id = id;
            messageDiv.style.cssText = `
                margin-bottom: 15px; padding: 12px 16px; border-radius: 12px;
                ${role === 'user' ? 'background: #E84D1A; color: white; margin-left: 20%; text-align: right;' : 'background: #f5f5f5; color: #333; margin-right: 20%;'}
            `;
            messageDiv.innerHTML = content;
            container.appendChild(messageDiv);
            container.scrollTop = container.scrollHeight;
        }

